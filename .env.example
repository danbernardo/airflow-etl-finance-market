# PostgreSQL Configuration
POSTGRES_USER=airflow
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=airflow

# Airflow Web UI
AIRFLOW_WWW_USER_USERNAME=admin1
AIRFLOW_WWW_USER_PASSWORD=your_secure_webui_password_here
AIRFLOW_WWW_USER_EMAIL=admin@example.com
AIRFLOW_WWW_USER_FIRSTNAME=Admin
AIRFLOW_WWW_USER_LASTNAME=User

# Airflow Security Keys (Generate new ones for production)
# Generate FERNET_KEY with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=generate_a_new_key_for_production
AIRFLOW_SECRET_KEY=generate_a_new_key_for_production

# Database Connection
AIRFLOW_CONN_POSTGRES_DW=postgresql://airflow:your_secure_postgres_password_here@postgres:5432/financial_dw

# Airflow Core Settings
AIRFLOW_CORE_EXECUTOR=LocalExecutor
AIRFLOW_CORE_DAGS_FOLDER=/opt/airflow/dags
AIRFLOW_CORE_LOAD_EXAMPLES=False
AIRFLOW_DATABASE_SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:your_secure_postgres_password_here@postgres/airflow

# Airflow Database Upgrade
_AIRFLOW_DB_UPGRADE=true
_AIRFLOW_WWW_USER_CREATE=true
